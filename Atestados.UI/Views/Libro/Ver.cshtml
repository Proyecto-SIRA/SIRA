@model Atestados.Objetos.Dtos.AtestadoDTO

@{
    ViewBag.Title = "Ver";
    Layout = "~/Views/Shared/_LayoutFuncionario.cshtml";
}

@using Atestados.Objetos.Dtos;

<div class="container-fluid">

    <div class="mt-4">
        <h2>Ver un Libro</h2>
    </div>
        <hr />
    <div class="row w-100">
        <div class="col-lg-6">
            <!-- columna izquierda -->
            <dl class="dl-horizontal">
                <dt>
                    Funcionario
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Persona.Nombre)
                    @Html.DisplayFor(model => model.Persona.PrimerApellido)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt>
                    Número de autores
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NumeroAutores)
                </dd>

                <dt>
                    ISBN
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Enlace)
                </dd>

                <dt>
                    Año de publicación
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Fecha.FechaFinal)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.InfoEditorial.Editorial)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.InfoEditorial.Editorial)
                </dd>

                <dt>
                    Sitio web
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.InfoEditorial.Website)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Pais)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Pais.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Observaciones)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Observaciones)
                </dd>

            </dl>
        </div>
        <div class="col-lg-4">
            <!-- columna derecha -->
            <div class="row table-wraper scrollbar-atestados">
                <h4>Archivos</h4>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Nombre
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Archivos)
                        {
                            <tr>
                                <td>
                                    @item.Nombre
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div id="nota">
                <h4>Nota ponderada:</h4>
            </div>
            <div class="row table-wraper scrollbar-atestados">
                <h4>Autores</h4>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Nombre
                            </th>
                            <th>
                                Apellidos
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Porcentaje
                            </th>
                            <th>
                                Nota ponderada
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @Html.Partial("Autores")
                    </tbody>

                </table>
            </div>
        </div>
    </div>


    <div class="row">
        @Html.Partial("Links", Model)
    </div>

</div>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">

    var id = @Model.AtestadoID;

    $.ajax({
        type: 'POST',
        url: '@Variables.BaseUrl/Funcionario/notaAtestado',
        async: false,
        contentType: 'application/json; charset=utf-8',
        dataType: 'json',
        data: JSON.stringify({ AtestadoID: id }),
        success: function (response) {                
            if (response != null) {
                $("#nota").append('<p>' + response +'</p>')
            }
                
        }
    })

</script>

