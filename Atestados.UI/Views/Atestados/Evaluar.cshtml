@model Atestados.Objetos.Dtos.EvaluacionXAtestadoDTO
@{
    ViewBag.Title = "Evaluar";
    Layout = "~/Views/Shared/_LayoutFuncionario.cshtml";
}



<h3>Evaluar</h3>

<div>Ingrese la evauación correspondiente al atestado:</div>

