@using Atestados.Objetos.Dtos;

@model List<UsuarioDTO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<h2>Lista de usuarios</h2>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Correo electrónico
            </th>
            <th>
                Tipo de usuario
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    @Model[i].NombreCompleto()
                </td>
                <td>
                    @Model[i].Email
                </td>
                <td>
                    @Model[i].TipoUsuarioNombre
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new
                       {
                           id = Model[i].UsuarioID
                       })
                    |
                    @Html.ActionLink("Eliminar", "Eliminar", new
                       {
                           id = Model[i].UsuarioID
                       })
                </td>
            </tr>
        }
    </tbody>
</table>


