@model Atestados.Objetos.Dtos.PersonaDTO

@using Atestados.Objetos.Dtos;

@{
    ViewBag.Title = "Ver";
    Layout = "~/Views/Shared/_LayoutFuncionario.cshtml";
}

@using Atestados.Objetos.Dtos;

<link href="~/Views/css/Atestado.css" rel="stylesheet" type="text/css" />

<style>

    textarea {
        padding: 0;
        margin: 0;
        width: 100%;
        height: 10vh;
    }

    .table-wraper {
        display: block;
    }

    .scrollbar-atestados {
        position: relative;
        height: 250px;
        overflow: auto;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <h2>Funcionario</h2>
        <hr />
    </div>
    <div class="row w-100">
        <div class="col-lg-6">
            <!-- columna izquierda -->
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>



            </dl>
        </div>


    </div>

    <div class="row">
        <h4>Documentos enviados</h4>
    </div>
    <div class="row table-wraper scrollbar">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">
                        Rubro
                    </th>
                    <th scope="col">
                        Nombre
                    </th>
                    <th scope="col">

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (AtestadoDTO item in ViewBag.Enviados)
                {
                    <tr>
                        <td scope="col">
                            @item.Rubro.Nombre
                        </td>
                        <td scope="col">
                            @item.Nombre
                        </td>

                        <td scope="col">
                            <a rubro="@item.RubroID" atestado="@item.AtestadoID" action="Ver">Ver</a>
                        </td>

                        <!--
                            <td>
                                @Html.ActionLink("Ver", "VerAtestado", new { id = item.AtestadoID})
                            </td>
                        -->
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>