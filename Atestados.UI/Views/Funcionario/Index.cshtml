            var e = $(this).find('#evaluacion');
            var id = e.attr("atestado");
            //console.log($(this).find('#evaluacion').attr("atestado"));
            $.ajax({
                type: 'POST',
                url: '@Variables.BaseUrl/Funcionario/notaAtestado',
                async: false,
