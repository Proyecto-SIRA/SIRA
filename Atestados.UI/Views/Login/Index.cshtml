@model Atestados.Objetos.Dtos.UsuarioDTO

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div id="contenedorLogueo" class="contenedorLogueo">


    <div class="container">
        <div id="imgLogTec"></div>
        <div id="datosLogueo" class="d-flex justify-content-between">
            <div class="p-1">
            </div>
            <div class="p-1">
                <div class="row bordesTitulo">
                    <div id="nombreAppPortal" style="max-width: 350px;" class="col-sm-12 text-center">
                        <h4>Sistema Informático para la Recepción de Atestados</h4>
                    </div>
                </div>
                <!--Form de Logueo de aplicación-->
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="input-group my-3 input-group">
                        <span class="input-group-text" id="basic-addon1"><i class="bi-envelope-fill"></i></span>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "Correo electrónico", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group my-3 input-group">
                        <span class="input-group-text" id="basic-addon2"><i class="bi-lock-fill"></i></span>
                        @Html.EditorFor(model => model.Contrasena, new { htmlAttributes = new { type = "password", placeholder = "Contraseña", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
                    </div>

                    <div style="margin-top: 0.625rem; text-align: center" class="form-group">
                        <input type="submit" value="Ingresar" class="btn btn-outline-primary" id="submit" />
                    </div>

                    <div style="margin-top: 10px; text-align: center" class="form-group">
                        <span id="lblMensajeError" class="TextoError" style="color:Red;font-size:medium;left: 30px; position: static; top: 337px">@ViewBag.Error</span>
                    </div>
                    <div style="margin-top: 1rem; text-align: center" class="form-group">
                        <a class="register-link" href="@Url.Action("Registrar", "Home")">Registrarse</a>
                    </div>


                }
            </div>
            <div class="p-1">
            </div>
        </div>
    </div>

    <!-- Modal Validación de datos ingresados -->
    <div id="popValidacion" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header popupmodalFallido">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Problemas de logueo</h4>
                </div>
                <div class="modal-body">
                    <p class="popMensaje"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Fallido -->
    <div id="popFallo" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header popupmodalFallido">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Aviso</h4>
                </div>
                <div class="modal-body">
                    <p class="popMensaje"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>

        </div>
    </div>
    <!-- Modal Validación Atestados -->
    <div id="popFalloValidacionAtestados" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header popupmodalFallido">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Aviso</h4>
                </div>
                <div class="modal-body">
                    <p class="popMensaje"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnIrWebAtestados" class="btn btn-danger">Ir a sitio para registrarse</button>
                </div>
            </div>

        </div>
    </div>
</div>
<br />
<br />
<br />

